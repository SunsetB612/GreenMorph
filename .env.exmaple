# GreenMorph 环境配置示例
# 复制此文件为 .env 并填入实际配置

# 应用配置
APP_NAME=GreenMorph API
APP_VERSION=1.0.0
DEBUG=false

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs

# 通义千问配置
TONGYI_API_KEY=your_tongyi_api_key_here
TONGYI_MODEL=qwen-vl-plus
TONGYI_BASE_URL=https://dashscope.aliyuncs.com/api/v1

# OpenAI配置（备用）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-vision-preview

# Anthropic配置（备用）
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Replicate配置（备用）
REPLICATE_API_TOKEN=your_replicate_api_token_here

# 图像生成配置
IMAGE_GENERATION_MODEL=stabilityai/stable-diffusion-xl-base-1.0
CONTROLNET_MODEL=lllyasviel/sd-controlnet-canny

# 图像处理配置
MAX_IMAGE_SIZE=1024,1024
IMAGE_QUALITY=95
